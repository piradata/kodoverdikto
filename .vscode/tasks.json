{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "run rails server",
      "type": "shell",
      "command": "bundle",
      "args": [
        "exec",
        "rails",
        "server",
        "-p",
        "$WEBSITES_PORT",
        "-b",
        "0.0.0.0",
        "-P",
        "$PIDFILE"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "run rails console",
      "type": "shell",
      "command": "bundle",
      "args": [
        "exec",
        "rails",
        "console"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "none",
        "isDefault": true
      }
    },
  ]
}
