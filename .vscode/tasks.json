{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run Rails Server",
      "runOptions": {
        "runOn": "folderOpen",
      },
      "options": {
        "statusbar": {
          "label" : "$(play)Rails S",
          "color" : "#31eb31"
        }
      },
      "type": "shell",
      "command": "bundle",
      "args": [
        "exec",
        "rails",
        "server",
        "-p",
        "$WEBSITES_PORT",
        "-b",
        "0.0.0.0",
        "-P",
        "$PIDFILE"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "none",
        "isDefault": false
      }
    },
    {
      "label": "Run Rails Console",
      "options": {
        "statusbar": {
          "label" : "$(beaker)Rails C",
          "color" : "#c2ae00"
        }
      },
      "type": "shell",
      "command": "bundle",
      "args": [
        "exec",
        "rails",
        "console"
      ],
      "problemMatcher": [],
      "group": {
        "kind": "none",
        "isDefault": false
      }
    },
  ]
}
