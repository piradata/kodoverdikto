{
  "search.exclude": {
    "**/.yarn": true,
    "**/.pnp.*": true,
    "**/public": true,
    "**/node_modules": true,
    "**/docker": true
  },
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "[ruby]": {
    "editor.detectIndentation": false,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "rebornix.ruby",
    "editor.formatOnSave": true
  },
  "[dockerfile]": {
    "editor.formatOnSave": false
  },
  "[azure-pipelines]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.associations": {
    "*.html.erb": "erb",
    "**/azure-pipelines.yml": "azure-pipelines",
    "docker-compose.*.yml": "dockercompose"
  },
  "ruby.useBundler": true, //run non-lint commands with bundle exec
  "ruby.useLanguageServer": true, // use the internal language server (see below)
  "ruby.codeCompletion": "rcodetools",
  "ruby.intellisense": "rubyLocate",
  "cSpell.enabled": true,
  "material-icon-theme.files.associations": {
    "docker-compose.devcontainer.yml": "docker",
    "docker-compose.sonar-scanner.yml": "docker",
    ".solargraph.yml": "rubocop"
  },
  "cSpell.words": [
    "actboy",
    "actioncable",
    "actionmailer",
    "actionpack",
    "actionview",
    "activejob",
    "activemodel",
    "activerecord",
    "activestorage",
    "aliariff",
    "beautif",
    "brazilian",
    "castwide",
    "concats",
    "connorshea",
    "cyclomatic",
    "devcontainer",
    "dockercompose",
    "donjayamanne",
    "eamodio",
    "entrypoints",
    "esbenp",
    "gitbook",
    "githistory",
    "gitmoji",
    "groksrc",
    "Gruntfuggly",
    "haml",
    "hoovercj",
    "Hotwire",
    "kodoverdikto",
    "Koichi",
    "mhutchie",
    "misogi",
    "mtxr",
    "PIDFILE",
    "pids",
    "railties",
    "rcodetools",
    "rdbg",
    "rdoc",
    "rebornix",
    "redhat",
    "Sasada",
    "savignano",
    "scannerwork",
    "seatonjiang",
    "sidekiq",
    "solargraph",
    "vayan",
    "vortizhe",
    "wingrunr",
    "yzhang"
  ],
  "rubyTestExplorer.rspecCommand": "spring rspec",
  "rubyTestExplorer.minitestCommand": "rake",
  "solargraph.useBundler": true,
  "cSpell.autoFormatConfigFile": false,
  "cSpell.language": "en,pt,pt-BR",
  "cSpell.enableFiletypes": ["html.erb", "ruby"],
  "cSpell.hideAddToDictionaryCodeActions": false,
  "cSpell.suggestionMenuType": "quickPick",
  "terminal.integrated.profiles.linux": {
    "ash": {
      "path": "ash"
    },
    "bash": {
      "path": "bash",
      "icon": "terminal-bash"
    },
    "zsh": {
      "path": "zsh"
    },
    "fish": {
      "path": "fish"
    },
    "tmux": {
      "path": "tmux",
      "icon": "terminal-tmux"
    },
    "pwsh": {
      "path": "pwsh",
      "icon": "terminal-powershell"
    }
  }
}
