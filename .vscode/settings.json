{
  "search.exclude": {
    "**/.yarn": true,
    "**/.pnp.*": true,
    "**/public": true,
    "**/node_modules": true,
    "**/docker": true
  },
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,
  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "prettier.prettierPath": ".yarn/sdks/prettier/index.js",
  "[ruby]": {
    "editor.detectIndentation": false,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "rebornix.ruby",
    "editor.formatOnSave": true
  },
  "[dockerfile]": {
    "editor.formatOnSave": false
  },
  "[azure-pipelines]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "files.associations": {
    "*.html.erb": "erb",
    "**/azure-pipelines.yml": "azure-pipelines",
    "docker-compose.*.yml": "dockercompose"
  },
  "vscode-erb-beautify.keepBlankLines": 2,
  "ruby.useBundler": true, //run non-lint commands with bundle exec
  "ruby.useLanguageServer": true, // use the internal language server (see below)
  "ruby.codeCompletion": "rcodetools",
  "ruby.intellisense": "rubyLocate",
  "cSpell.enabled": true,
  "material-icon-theme.files.associations": {
    "docker-compose.devcontainer.yml": "docker",
    "docker-compose.sonar-scanner.yml": "docker",
    ".solargraph.yml": "rubocop"
  },
  "cSpell.words": [
    "devcontainer",
    "dockercompose",
    "entrypoints",
    "kodeverdikto",
    "solargraph"
  ],
  "rubyTestExplorer.rspecCommand": "rspec",
  "rubyTestExplorer.minitestCommand": "rake",
  "solargraph.useBundler": true
}